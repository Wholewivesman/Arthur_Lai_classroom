// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id       String @id @unique
  password String
  name     String
  class    Int
  number   Int
  wealth   Int    @default(0)
}

// model Resource {
//   id  String @id @unique

// }

model Exam {
  id   Int    @id @default(autoincrement())
  name String
}

model Question {
  id          Int    @id @default(autoincrement())
  statement   String
  optionJson  String
  explanation String
}
